<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_titlebar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/title_bar"
    android:alpha="20">

    <Button
        android:id="@+id/settings_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_settings"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/settings_button"
        android:ellipsize="marquee"
        android:gravity="center_horizontal|center"
        android:singleLine="true"
        android:text="地图类型: "
        android:textColor="@color/title_color"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/map_type_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="-31dp"
        android:layout_toEndOf="@+id/text_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="普通图"
            android:textColor="@color/title_color" />

        <RadioButton
            android:id="@+id/satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫星图"
            android:textColor="@color/title_color" />

        <RadioButton
            android:id="@+id/none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空白地图"
            android:textColor="@color/title_color" />
    </RadioGroup>

    <Switch
        android:id="@+id/mark_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/map_type_group"
        android:text="Mark" />


</RelativeLayout>